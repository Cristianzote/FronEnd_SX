                <td><input type="text" class="form-control" id="" placeholder="Escriba a quien se le debe"></td>
              </tr>
              </tfoot>
          </table>
          <button type="submit"><i class="fa fa-plus btn btn-success btn-lg"> Agregar deuda </i></button>
          <a type="button" href="administrador/pagos-pendientes"><i class="fa fa-times btn btn-danger btn-lg "> Cancelar</i></a>
