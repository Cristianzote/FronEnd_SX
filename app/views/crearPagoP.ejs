      <%- include('partials/dashhead.ejs'); %>
      <form action="/administrador/saveDeuda" method="post">
        <div class="box">
          <div class="box-header with-border">
            <h3>Crear nuevo pago pendiente</h3>
            <h4 class="text-muted">Aqu√≠ puedes crear un nuevo pago pendiente</h4>
