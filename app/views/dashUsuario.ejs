<!--Pagina de los usuarios, muestra todos los 
  usuarios y redirige al perfil del administrador-->

<html>
<%- include('partials/dashmenu.ejs'); %>

  <body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <%- include('partials/dashhead.ejs'); %>


        <div class="box">
          <div class="box-header with-border">
            <h3>Usuarios</h3>
            <h4 class="text-muted">Aquí se encuentran todos tus usuarios vendedores, también puedes acceder a tu perfil
              desde aquí</h4>
            <a type="button" href="/administrador/crear-usuario"><i class="fa fa-user-plus btn btn-primary "> Crear un nuevo
                usuario</i></a>
            <a type="button" href="/administrador/perfil"><i class="fa fa-user btn btn-info "> Perfil del administrador</i></a>
          </div>
          <div>
            <!--Tabla de los usuarios-->
            <table id="" class="table table-bordered">
              <thead>
                <tr>
                  <th>USUARIO</th>
                  <th>NOMBRES</th>
                  <th>APELLIDOS</th>
                  <th>ACCIONES</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% usuario.forEach((element)=>{ %>
                    <td>
                       <%= element.usuario%>
                    </td>
                    <td>
                      <%= element.nombres%>
                    </td>
                    <td><%= element.apellidos%></td>
                    <td><a type="button" href="/administrador/reportes-vendedores"><i class="fa fa-book btn btn-primary "> Revisar
                          Reportes</i></a>
                      <a type="button" href="modificar-vendedor"><i class="fa fa-edit btn btn-warning "> Modificar
                          Usuario</i></a>
                      <a type="button" href="/administrador/borrarUsuario?id=<%= element.id %> "><i class="fa fa-trash btn btn-danger"> Borrar Usuario</i></a>
                    </td>
                </tr>
                <% }); %>
                  </tfoot>
            </table>
            <!--/Tabla de los usuarios-->
          </div>
        </div>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->


    <%- include('partials/dashfooter.ejs'); %>

      <script>
        function eliminarUsuario(id) {
          Swal.fire({
            title: 'Estas seguro?',
            text: "No tiene reversa! ... " + id,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Si, eliminalo!'
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = 'DELETE FROM usuario_vendedor WHERE id = ?', id;
              Swal.fire(
                'Deleted!',
                'El usuario ha sido elimando.',
                'success'
              )
            }
          })
        }
      </script>
      <!-- jQuery 3 -->
      <script src="v1/../bower_components/jquery/dist/jquery.min.js"></script>
      <!-- Bootstrap 3.3.7 -->
      <script src="v1/../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
      <!-- SlimScroll -->
      <script src="v1/../bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
      <!-- FastClick -->
      <script src="v1/../bower_components/fastclick/lib/fastclick.js"></script>
      <!-- AdminLTE App -->
      <script src="v1/../dist/js/adminlte.min.js"></script>
      <!-- AdminLTE for demo purposes -->
      <script src="v1/../dist/js/demo.js"></script>
      </div>
      </script>
  </body>

</html>