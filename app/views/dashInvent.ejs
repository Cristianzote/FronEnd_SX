<!--Pagina de inventario-->

<html>
<%- include('partials/dashmenu.ejs'); %>

  <body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <%- include('partials/dashhead.ejs'); %>


        <div class="box">
          <div class="box-header with-border">
            <h3>Inventario</h3>
            <h4 class="text-muted">Este es tu inventario, desde aquí puedes modificar, buscar, borrar y agregar
              productos</h4>
            <p class="text-muted">Ultima actualización del inventario: </p>
            <a type="button" href="/administrador/crear-producto" class="fa fa-pencil-square-o btn btn-primary btn-lg"> Agregar
                Nuevo Producto</a>
          </div>
          <div>
            <div class="row">
              <div class="col-md-12 pull-right">
                <div class="form-group">
                  <input type="text" class="form-control" id="bProducto" placeholder="Buscar producto en el inventario">
                  <a type="button" href="#"><i class="fa fa-search btn btn-primary btn-lg"> Buscar producto</i></a>
                </div>
              </div>
            </div>
            <table id="datosInv" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>CANTIDAD DEL PRODUCTO</th>
                  <th>DESCRIPCION DEL PRODUCTO</th>
                  <th>PRECIO UNITARIO</th>
                  <th>ACCIONES</th>
                </tr>
              </thead>
              <tbody>
                <% productos.forEach((element)=>{ %>
                  <tr>
                    <td>
                      <%= element.cantidad%>
                    </td>
                    <td>
                      <%= element.nombre%>
                    </td>
                    <td>
                      <%= element.precio%>
                    </td>
                    <td>
                      <a type="button" href="/administrador/modificar-producto/<%= element.id %>"><i class="fa fa-edit btn btn-warning "> Modificar Producto</i></a>
                      <a type="button" href="/administrador/borrarProducto?id=<%= element.id %>"><i class="fa fa-trash btn btn-danger"> Borrar Producto</i></a>
                    </td>
                  </tr>
                  <% }); %>

                    </tfoot>
            </table>

          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <h4 class="text-muted">Valor total del inventario actual:</h4>
                <input class="form-control" id="disabledInput" type="number" placeholder="Valor total del inventario"
                  disabled>
              </div>
            </div>
          </div>
        </div>
        <!-- /.content -->
    </div>


    <%- include('partials/dashfooter.ejs'); %>

      <script>
        function eliminarProducto(id) {
          Swal.fire({
            title: 'Estas seguro?',
            text: "No tiene reversa! ... " + id,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Si, eliminalo!'
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = 'DELETE FROM productos WHERE id = ?', id;
              Swal.fire(
                'Deleted!',
                'El producto ha sido eliminado.',
                'success'
              )
            }
          })
        }
      </script>
      <!-- jQuery 3 -->
      <script src="v1/../bower_components/jquery/dist/jquery.min.js"></script>
      <!-- Bootstrap 3.3.7 -->
      <script src="v1/../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
      <!-- SlimScroll -->
      <script src="v1/../bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
      <!-- FastClick -->
      <script src="v1/../bower_components/fastclick/lib/fastclick.js"></script>
      <!-- AdminLTE App -->
      <script src="v1/../dist/js/adminlte.min.js"></script>
      <!-- AdminLTE for demo purposes -->
      <script src="v1/../dist/js/demo.js"></script>
      </div>
      </script>
  </body>

</html>