<html>
<%- include('partials/dashmenu.ejs'); %>
<body class="hold-transition skin-blue sidebar-mini">
<!-- Site wrapper -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
<%- include('partials/dashhead.ejs'); %>


    <div class="box">
      <div class="box-header with-border">
        <h3>Clientes</h3>
        <h4 class="text-muted">Aquí están tus clientes</h4>
        <a type="button" href="/administrador/crear-cliente"><i class="fa fa-pencil-square-o btn btn-primary btn-lg"> Agregar Nuevo Cliente</i></a>
      </div>
      <div>
        <table id="" class="table table-bordered table-striped">
          <thead>
          <tr>
            <th>CEDULA DEL CLIENTE</th>
            <th>NOMBRES</th>
            <th>APELLIDOS</th>
            <th>DIRECCION</th>
            <th>ACCIONES</th>
          </tr>
          </thead>
          <tbody>
            <% cliente.forEach((element)=>{ %>
              <tr>
                <td><%= element.cedula%></td>
                <td><%= element.nombres%></td>
                <td><%= element.apellidos%></td>
                <td><%= element.direccion%></td>
                <td>
                  <a type="button" href="/modificar-cliente"><i class="fa fa-edit btn btn-warning "> Modificar Cliente</i></a>
                  <a type="button" href="/administrador/borrarCliente?id=<%= element.id %> "><i class="fa fa-trash btn btn-danger"> Borrar Cliente</i></a>
                </td>
              </tr>
              <% }); %>
          </tfoot>
        </table>
        
      </div>

    </div>
  <!-- /.content -->
  </div>


